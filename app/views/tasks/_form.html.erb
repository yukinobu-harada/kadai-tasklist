<%# <form></form>と同様 model: @taskでnewアクションの@taskを使用することを明示 local: trueは画面遷移を伴う同期通信 %>
<%= form_with(model: task, local: true) do |f| %>
  <%# if message.errors.any? でバリデーションエラーがあるかを確認 %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <%# message.errors.full_messages でバリエーションエラーに対するメッセージ配列を取得 %>
        <% task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= f.label :status, 'ステータス' %>
  <%= f.text_field :status %>
  
  <%# f.label,f.text_fieldでどのカラムに対する入力欄なのかを明示 %>
  <%= f.label :content, 'タスク' %>
  <%= f.text_field :content %>
  
  <%= f.submit '投稿' %>
<% end %>