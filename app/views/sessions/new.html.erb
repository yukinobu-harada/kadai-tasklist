<h1>Log in</h1>
  <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
    
    <div class="form-group">
      <%= f.label :email, 'Email' %>
      <%= f.email_field :email %>
    </div>
    
    <div class="form-group">
      <%= f.label :password, 'Password' %>
      <%= f.password_field :password %>
    </div>
    
    <%= f.submit 'Log in' %>
  <% end %>
  
  <P>New user? <%= link_to 'Sign up now!', signup_path %></P>
